import pandas as pd

def load_and_display(file_path):
    try:
        # Load the data into a DataFrame
        df = pd.read_csv(file_path)
        
        # Display the first few rows to the console
        print("--- Tips Record Summary ---")
        print(df.head())
        
        # Optional: Display basic statistics
        print("\n--- Quick Statistics ---")
        print(df.describe())

    except FileNotFoundError:
        print("Error: The file was not found. Check the file path.")
    except Exception as e:
        print(f"An error occurred: {e}")

if __name__ == "__main__":
    # Replace 'tips.csv' with your actual filename
    load_and_display("tips.csv")
